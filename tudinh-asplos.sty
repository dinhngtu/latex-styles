\RequirePackage{kvoptions}
\SetupKeyvalOptions{family=tudinh,prefix=tudinh@}
\DeclareBoolOption{comments}
\DeclareBoolOption{shortalg}
\DeclareBoolOption{biblatex}
\DeclareBoolOption{natbib}
\DeclareStringOption[bib.bib]{bib}
\ProcessKeyvalOptions*

\iftudinh@biblatex
    \PackageError{tudinh-asplos}{biblatex not supported}{biblatex not supported, try natbib instead}
\fi

\RequirePackage{tudinh-base}

\iftudinh@natbib
    \RequirePackage[square,numbers]{natbib}
    \RequirePackage{tudinh-natbib}
    \newcommand{\printbibliography}[0]{\bibliographystyle{plainnat}\bibliography{\tudinh@bib}}
\else
    \newcommand{\printbibliography}[0]{\bibliographystyle{plain}\bibliography{\tudinh@bib}}
\fi

\RequirePackage{flushend}
\RequirePackage{microtype}
\microtypecontext{spacing=nonfrench}
\RequirePackage[normalem]{ulem}

